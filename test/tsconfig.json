{
    "include": [
        "src/**/*.ts",
        "../src/**/*.ts"
    ],
    "exclude": [
        "node_modules/",
        "dist"
    ],
    "compilerOptions": {
        "allowJs": false,
        "target": "esnext",
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "esnext",
        "esModuleInterop": true
    }
}