{
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/*",
        "dist/",
        "src/**/*.test.ts"
    ],
    "compilerOptions": {
        "allowJs": false,
        "target": "esnext",
        "skipLibCheck": true,
        "declaration": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "module": "esnext",
        "esModuleInterop": true,
        "strict": true,
    }
}